<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sym_bg"
    tools:context=".Prevention">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:shadowColor="#251A1A"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="Precautions of COVID 19"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/causes_gradient"
                app:cardBackgroundColor="#14FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8FFFFFF">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="120dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:fadingEdge="horizontal|vertical"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/wash_hands" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Clean your \nhands often"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/cleanHandButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:onClick="showMore"
                            android:text="More" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cleanTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Regularly and thoroughly clean your hands with an alcohol-based hand rub or wash them with soap and water.\nWhy? Washing your hands with soap and water or using alcohol-based hand rub kills viruses that may be on your hands."
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/causes_gradient"
                app:cardBackgroundColor="#14FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8FFFFFF">

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="120dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:fadingEdge="horizontal|vertical"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/social_distance" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Social Distancing"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/distanceButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:onClick="showMore"
                            android:text="More" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/distanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Maintain at least 1 metre (3 feet) distance between yourself and others. \nWhy? When someone coughs, sneezes, or speaks they spray small liquid droplets from their nose or mouth which may contain virus."
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#14FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8FFFFFF">

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="120dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:fadingEdge="horizontal|vertical"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/crowded" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="19dp"
                            android:layout_weight="1"
                            android:text="Avoid Crowded Areas"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/crowdedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:onClick="showMore"
                            android:text="More" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/crowdedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Avoid going to crowded places. Why? Where people come together in crowds, you are more likely to come into close contact with someone that has COIVD-19 and it is more difficult to maintain physical distance of 1 metre (3 feet)."
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#14FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8FFFFFF">

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="120dp"
                            android:layout_height="115dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:fadingEdge="horizontal|vertical"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/stay_home" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="19dp"
                            android:layout_weight="1"
                            android:text="Stay home"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/stayHomeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:onClick="showMore"
                            android:text="More" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/stayHomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Stay home and self-isolate even with minor symptoms such as cough, headache, mild fever, until you recover. Have someone bring you supplies. If you need to leave your house, wear a mask to avoid infecting others."
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/causes_gradient"
                app:cardBackgroundColor="#14FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E8FFFFFF">

                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="120dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:fadingEdge="horizontal|vertical"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/touch" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Avoid touching eyes, nose and mouth"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/touchButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_background"
                            android:onClick="showMore"
                            android:text="More" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/touchTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout5"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:text="Hands touch many surfaces and can pick up viruses. Once contaminated, hands can transfer the virus to your eyes, nose or mouth. From there, the virus can enter your body and infect you."
                        android:textSize="18sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="#37FFFFFF"
                android:gravity="center"
                android:padding="15dp"
                android:text="STAY HOME... \nSAVE LIVES..."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#BFDAF3"
                android:textSize="33sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>